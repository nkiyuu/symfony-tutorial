{% extends 'base.html.twig' %}

{% block page_title %}Blog posts{% endblock %}

{% block content %}
{% if posts | length > 0 %}
  <table class="table" border="1">
    <thead>
    <tr>
      <td>ID</td>
      <td>タイトル</td>
      <td>作成日</td>
    </tr>
    </thead>
    <tbody>
      {% for post in posts %}
        <tr>
          <td><a href="{{ path('blog_show', {id: post.id}) }}">{{ post.id }}</a></td>
          <td>{{ post.title }}</td>
          <td>{{ post.createdAt|date('Y/m/d H:i') }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
  <p>No Posts</p>
{% endif %}
{% endblock %}